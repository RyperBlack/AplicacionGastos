<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchanges.ExchangesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="@string/total"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/helecho_verde"
                android:padding="4dp"
                android:elevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/day"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/week"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnMonth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/month"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/year"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnPeriod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/period"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- Gráfico de pastel en tarjeta -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardElevation="10dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Lista de intercambios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ExchangesRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botón flotante -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddExchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/Add"
        android:src="@android:drawable/ic_input_add"
        android:tint="@color/black" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
