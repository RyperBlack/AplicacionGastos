<resources>
    <!-- Base application theme. -->
    <style name="Theme.TFGAplicacionGastos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorOnSecondary">@color/gris_feldespato</item>
        <item name="android:windowBackground">@color/gris_feldespato</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TFGAplicacionGastos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TFGAplicacionGastos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TFGAplicacionGastos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>